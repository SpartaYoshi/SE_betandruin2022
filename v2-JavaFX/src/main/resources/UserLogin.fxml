   <children>
      <TextField fx:id="usernameTextField" layoutX="195.0" layoutY="136.0" prefHeight="25.0" prefWidth="301.0" />
      <PasswordField fx:id="passwordTextField" layoutX="195.0" layoutY="187.0" prefHeight="25.0" prefWidth="301.0" />
      <Label layoutX="104.0" layoutY="132.0" text="Username:">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label layoutX="106.0" layoutY="190.0" text="Password:">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label layoutX="270.0" layoutY="42.0" prefHeight="65.0" prefWidth="96.0" text="Log-in" textAlignment="CENTER" textOverrun="CLIP">
